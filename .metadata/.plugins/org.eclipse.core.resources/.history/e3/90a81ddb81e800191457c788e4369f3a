
public class Prueba_Hilo1 {
	public static void main(String[] args) throws InterruptedException {
		Ejemplo_Hilos1 Hilo1 = new Ejemplo_Hilos1(1500);
		Ejemplo_Hilos1 Hilo2 = new Ejemplo_Hilos1(1500);

		Hilo1.run(); //Ahora se lanzan ambos hilos...
		Hilo2.run(); //con apertura de co-rutina

		Hilo1.join();
		Hilo2.join(); // y cierre de co-rutina

		System.out.println("Hilos terminados");
	}
}
