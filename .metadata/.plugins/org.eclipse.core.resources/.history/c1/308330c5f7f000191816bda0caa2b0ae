/**
 * @author Miguel Afán Espinosa
 * @version 1.0
 */

public class tareaRunnable implements Runnable {

	static int n = 0;;

	int veces;
	boolean tipo;
	public tareaRunnable() {
	}

	public tareaRunnable(boolean tipo, int veces) {

		this.tipo = tipo;
		this.veces = veces;

	}

	int getN() {
		return n;
	}

	public void run() {

		if (tipo) {
			for (int i = 0; i < veces; i++) {

				n++;
			}

		} else {
			for (int j = 0; j < veces; j++)
				n--;
		}

	}

}
